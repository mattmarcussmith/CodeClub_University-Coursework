*@
@{
}

 <div class="album py-5 bg-dark mt-4">
        <div class="container">
        <h5 class="text-white pb-3">Developer clubs around the United States</h5>
          <div class="row">
            @foreach (var item in Model)
            {
                 <div class="col-lg-4 col-md-6 col-sm-12">
                      <div class="card bg-dark text-white p-4  mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225%" alt="Card image cap">
                        <div class="card-body ">
                          <p class="card-text">@item.Title</p>
                            <small class="text-muted">@item.ClubCategory</small>
                          <p class="card-text">@item.Description</p>
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                    <a asp-controller="Club" asp-action="DetailClub" asp-route-id="@item.Id" type="btn btn-success" class="btn btn-sm btn-outline-secondary">View Club</a>

                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="Club" asp-action="EditClub" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a type="btn btn-success" asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>

                                    }
                                
                            </div>
                           
                          </div>
                        </div>
                      </div>
                  </div>
            }
            </div>
          </div>
        </div>

