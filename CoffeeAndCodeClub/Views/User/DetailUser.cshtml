@using WeCodeCoffee.ViewModel
@model DetailUserViewModel

<div class="container bg-dark text-white rounded border-0 mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ProfilePictureUrl" class="img-fluid rounded" alt="Profile Picture">
        </div>
        <div class="col-md-8">
            <h1>@Model.UserName</h1>
            <p><strong>Full Name:</strong> @Model.FirstName @Model.LastName</p>
            <p><strong>Developer Type:</strong> @Model.DeveloperType</p>
            <p><strong>Bio:</strong> @Model.Bio</p>
            <p><strong>Location:</strong> @Model.Address?.City, @Model.Address?.State, @Model.Address?.Country</p>
            <p><strong>Last Login:</strong> @Model.LastLoginTime.</p>
        </div>
    </div>
</div>

