﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

@model WeCodeCoffee.ViewModel.DashboardViewModel

<h1 class="display-6 fw-normal bg-dark w-30 p-2 m-4 rounded">User Dashboard</h1>
<a type="button" class="btn btn-primary m-3" asp-area="" asp-controller="Club" asp-action="CreateClub">Create Club</a>
<a type="button" class="btn btn-primary m-3" asp-area="" asp-controller="Event" asp-action="CreateEvent">Create Event</a>
<a type="button" class="btn btn-primary m-3" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">Edit User Profile</a>


<div class="album py-5 bg-dark text-light">
    <div class="container">
        <h2 class="display-7 fw-normal pb-2">Your Clubs</h1>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.Clubs)
            {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card  bg-dark text-white mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Club" asp-action="DetailClub" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                    @*                     <a asp-controller="Club" asp-action="EditClub" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a> *@
                                        <a asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h2 class="display-7 fw-normal">Your Events</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Events)
            {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card bg-dark text-white mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                        <div class="card-body ">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Event" asp-action="DetailEvent" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                        @*                 <a asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a> *@
                                        <a asp-controller="Event" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.EventCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div> 

    </div>
</div>