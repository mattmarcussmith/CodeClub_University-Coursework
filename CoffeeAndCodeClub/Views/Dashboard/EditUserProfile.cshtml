@using WeCodeCoffee.ViewModel
@model EditUserProfileViewModel


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1 class="text-white text-center">Edit User Profile</h1>

<div class="d-flex justify-content-center align-items-center">

<form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id"/>
    <div class="form-group mb-1">
        <label asp-for="UserName">User</label>
        <input asp-for="UserName" class="form-control" placeholder="User picture..." />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group mb-1 ">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" placeholder="First name..." />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group mb-1">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" placeholder="Last name..." />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group mb-1">
        <label asp-for="Bio">Bio</label>
        <input asp-for="Bio" class="form-control" placeholder="Tell use about yourself..." />
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>
    <div class="form-group mb-1">
        <label asp-for="DeveloperType">Your Tech Stack</label>
        <input asp-for="DeveloperType" class="form-control" placeholder="What is your stack..." />
        <span asp-validation-for="DeveloperType" class="text-danger"></span>
    </div>
    <div class="form-group mb-1">
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" class="form-control" placeholder="City..." />
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <div class="form-group mb-1">
        <label asp-for="Address.State">State</label>
        <input asp-for="Address.State" class="form-control" placeholder="State..." />
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>
    <div class="form-group mb-1">
        <label asp-for="Address.Country">Country</label>
        <input asp-for="Address.Country" class="form-control" placeholder="Country..." />
        <span asp-validation-for="Address.Country" class="text-danger"></span>
    </div>
    <div class="form-group mb-1">
        <label asp-for="Image">Profile Picture</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Profile picture..." />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
     
    <button type="submit" class=" mb-1 w-100 btn btn-primary">Submit</Button>


</form>

</div>