@using WeCodeCoffee.ViewModel
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}


c


<div class="album py-5 mt-4 bg-dark text-white ">
    <div class="container">
        <div class="text-center mb-1">
            @if (Model.Clubs == null || !Model.Clubs.Any())
            {
                <h5 class="fw-light">There are no developer clubs in your area!</h5>
            }
            else
            {
                <h5 class="fw-light border text-white p-2 rounded ">Developer Clubs near @Model.City,  @Model.State.</h5>
                <p class="fst-italic">Join the Dev Network for more info.</p>
            }
        </div>

        <div >
            @if (Model.Clubs != null)
            {
                @foreach (var item in Model.Clubs)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 ">
                        <div class="card text-white bg-dark rounded mb-4 box-shadow  ">
                            <div class="card-body">
                                <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                                <p class="card-text">@item.Title</p>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Club" asp-action="DetailClub" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                    <small class="text-muted">@item.ClubCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<div class="album py-5 bg-dark text-white">
    <div class="container">
        <div class="text-center mb-4">
            @if (Model.Events == null || !Model.Events.Any())
            {
                <h5 class="fw-light">There are no developer events in your area!</h5>
            }
            else
            {
                <h5 class="fw-light">Developer events near  @Model.City  @Model.State.</h5>
            }
        </div>

        <div>
            @if (Model.Events != null)
            {
                @foreach (var item in Model.Events)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card mb-4 box-shadow">
                            <div class="card-body bg-dark">
                                <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                                <p class="card-text">@item.Title</p>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Event" asp-action="DetailEvent" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                    <small class="text-muted">@item.EventCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

